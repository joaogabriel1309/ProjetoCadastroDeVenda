    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    StringGrid1: TStringGrid;
    EDT_QUANTIDADE: TEdit;
    EDT_VALOR_UNITARIO: TEdit;
    Label5: TLabel;
    Label6: TLabel;
    Label7: TLabel;
    EDT_PRODUTO: TEdit;
